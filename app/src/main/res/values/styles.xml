<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="productNameFeedPage">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/product_name</item>
        <item name="fontFamily">@font/open_sans_extra_bold</item>
    </style>

    <style name="productNameDetailsPage">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/product_name</item>
        <item name="fontFamily">@font/open_sans_extra_bold</item>
    </style>

    <style name="productDetails">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/product_details</item>
    </style>

    <style name="productPrice">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textColor">@color/product_price</item>
    </style>

    <style name="productPriceSecond">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textColor">@color/product_price_second</item>
    </style>

    <style name="floatingCart">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="floatingCartCounter">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/floating_cart_counter</item>
    </style>

    <style name="actionFilters">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textColor">@color/product_name</item>
    </style>

    <style name="verticalLine">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent_line</item>
        <item name="android:layout_width">1dp</item>
    </style>

    <style name="sortBy">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/product_name</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="favoritesCounter">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_round_orange</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>